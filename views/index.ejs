  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=291845334182357";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div id="step_1" class="step">
	<div class="step_content">
		<img id="main_fish" src="/images/fat_flying_fish.png" style="" />
		<h2>When a friend is nearby, Friendius goes BLEEP!</h2>
		<a class="arrow" href="#"><img src="/images/arrow_down.png" /></a>
	</div>
</div>
<div id="step_2" class="step">
	<div class="step_content">
		<img src="/images/no_check_in.png" />
		<h2>NO check-ins required.</h2> 
		<p>Friendius works automatically.</p>
		<a class="arrow" href="#"><img src="/images/arrow_down.png" /></a>
	</div>
</div>
<div id="step_3" class="step">
	<div class="step_content">
		<img src="/images/agent.png" />
		<h2>NO oversharing.</h2>
		<p>Only notifies friends that you are <strong>nearby</strong>, no more.

		</p>
		<a class="arrow" href="#"><img src="/images/arrow_down.png" /></a>
	</div>
</div>
<div id="step_4" class="step">
	<div class="step_content">
	<img src="/images/facebook.png" />
	<h2>NO signup required.</h2> 
	<p>Friendius uses your Facebook account.</p>
	<a class="arrow" href="#"><img src="/images/arrow_down.png" /></a>
	</div>
</div>
<div id="step_5" class="step">
	<div class="step_content">
		<img src="/images/heart.png" />
		<h2>ONLY for real friends.</h2> 
		<p>Friendius will NOT send notifications to friends that you've put in your <strong>acquaintances</strong> list on Facebook.</p>
		<a class="arrow" href="#"><img src="/images/arrow_down.png" /></a>
	</div>
</div>
<div id="step_6" class="step">
	<div class="step_content">
	<img src="/images/spam.jpg" />
	<h2>WON'T spam your friends.</h2>
	<p>Only notifies friends that are both nearby <strong>and</strong> have the Friendius app - will never post to your feed.</p>
	<a class="arrow" href="#"><img src="/images/arrow_down.png" /></a>
	</div>
</div>
